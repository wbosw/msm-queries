<h1>Direcotr #<%= @the_director.id %> details</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_director.name %></dd>
  <dt>Dob</dt>
  <dd><%= @the_director.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @the_director.bio %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @the_director.image %>" width = 100 alt=""></dd>
  <dt>Created at</dt>
  <dd><%= @the_director.created_at %></dd>
  <dt>Updated at</dt>
  <dd><%= @the_director.created_at %></dd>
</dl>

<hr>

<% matching_movies = Movie.where({:director_id => @the_director.id})%>

  <table border=1>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th><!-- blank --></th>
    </tr>
  <% matching_movies.each do |a_movie|%>
<tr>
<h2>Filmography</h2>
      <td><%= a_movie.id %></td>
      <td><img src="<%= a_movie.image %>" width = 100 alt="image of <%= a_movie.title %> cover"></td>
      <td><%= a_movie.title %></td>
      <td><%= a_movie.year %></td>
      <td><%= a_movie.director_id %></td>
      <td><a href="/movies/<%= a_movie.id %>">Show details</a></td>
  <%end%>
